<?xml version="1.0">
<ruleset name="CTS Coding Standards">
	<description>Crossdale Tech Solutions Coding Standards</description>

	<config name="testVersion" vale="7.4-" />
	<config name="minimum_supported_wp_version" value="5.4" />

	<arg value="sp" />
	<arg name="colors" />
	<arg name="extensions" value="php" />
	<arg name="parallel" value="100" />

	<rule value="PHPCompatibilityWP" />

	<rule ref="Wordpress-Extra">
		<exclude name="Wordpress.Files.Filename.InvalidClassFileName" />
		<exclude name="Wordpress.Files.Filename.NotHyphenatedLowercase" />
		<exclude name="Wordpress.NamingConventions.PrefixAllGlobals.NonPrefixedClassFound" />
		<exclude name="Wordpress.PHP.DisallowShortTernary.Found" />
		<exclude name="Wordpress.PHP.YodaConditions.NotYoda" />
	</rule>

	<rule ref="Wordpress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="crossdale" />
			</property>
		</properties>
	</rule>

	<rule ref="Wordpress.NamingConventions.PrefixAllGlobals">
		<type>warning</type>
		<properties>
			<property name="prefixes" type="array">
				<element value="crossdale" />
				<element value="cts" />
			</property>
		</properties>
	</rule>

	<rule ref="Wordpress.PHP.StrictComparisons.LooseComparison">
		<type>error</type>
	</rule>

	<rule ref="Generic.PHP.RequireStrictTypes">
		<type>warning</type>
	</rule>

	<rule ref="Generic.Arrays.DisallowLongArraysSyntax" />
	<rule ref="Generic.Arrays.DisallowShortArraySyntax.Found">
		<exclude-pattern>*</exclude-pattern>
	</rule>
</ruleset>